
@model List<Category>
@{
    int count = 0;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Striped Table</h4>
            <p class="card-description">
                Add class <code>.table-striped</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                No
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Product Count
                            </th>
                            
                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(Category item in Model){
                        <tr>
                           
                            <td>
                                @count
                            </td>
                            
                            <td>
                               @item.Name
                            </td>
                            <td>
                               @item.Products.Count
                            </td>
                            <td>
                                    <a class="btn btn-warning  "><i class="mdi mdi-pencil-box">Update</i></a>
                                    <a class="btn btn-danger "><i class="mdi mdi-delete">Delete</i></a>
                                    <a class="btn btn-primary "><i class="mdi mdi-open-in-new">Details</i></a>
                            </td>
                        </tr>
                        }
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>